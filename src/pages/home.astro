---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import ImageCarousel from '~/components/widgets/ImageCarousel.astro';
import hearingSoundWaves from 'public/images/hearing-sound-waves.jpg';
import audiologistConsultation from 'public/images/audiologist-consultation.jpg';
import hearingAidsDisplay from 'public/images/hearing-aids-display.jpg';
import premiumHearingAids from 'public/images/premium-hearing-aids.jpg';
import hearingTestProcess from 'public/images/hearing-test-process.jpg';
import hearingAidCharging from 'public/images/hearing-aid-charging.jpg';

const metadata = {
  title: 'מכון טון - מרפאת שמיעה מקצועית',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="מרפאת שמיעה מקצועית"
    actions={[
      {
        variant: 'primary',
        target: '_self',
        text: 'פגישת ייעוץ',
        href: '/contact',
        icon: 'tabler:calendar',
      },
      { text: 'למידע נוסף', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      שמיעה טובה יותר מתחילה <br />
      <span class="break-words dark:text-white">במכון טון</span>
    </Fragment>

    <Fragment slot="subtitle">
      מרפאת שמיעה מתקדמת המציעה שירותי אודיולוגיה מקצועיים, בדיקות שמיעה מדויקות ופתרונות מותאמים אישית לשיפור איכות
      השמיעה שלכם. עובדים תחת הסכמים של כל הקופות.
    </Fragment>
  </Hero>

  <!-- Image Carousel Widget ********* -->
  <ImageCarousel
    title="המרכז שלנו"
    subtitle="צפו בציוד המתקדם ובסביבה המקצועית של מכון טון"
    items={[
      {
        id: 'hearing-sound-waves',
        image: hearingSoundWaves,
        title: 'טכנולוגיית שמיעה מתקדמת',
        description: 'פתרונות חדשניים לשיפור השמיעה באמצעות טכנולוגיה מתקדמת',
        alt: 'איור דיגיטלי של גלי קול ואוזן - טכנולוגיית שמיעה',
      },
      {
        id: 'audiologist-consultation',
        image: audiologistConsultation,
        title: 'בדיקת שמיעה מקצועית',
        description: 'בדיקות שמיעה מקיפות על ידי אודיולוגים מוסמכים',
        alt: 'אודיולוג מבצע בדיקת שמיעה למטופלת במרפאה',
      },
      {
        id: 'hearing-aids-display',
        image: hearingAidsDisplay,
        title: 'מכשירי שמיעה מתקדמים',
        description: 'מגוון רחב של מכשירי שמיעה מהטכנולוגיה החדישה ביותר',
        alt: 'מבחר מכשירי שמיעה מודרניים בצבעים שונים',
      },
      {
        id: 'premium-hearing-aids',
        image: premiumHearingAids,
        title: 'מכשירי שמיעה פרימיום',
        description: 'פתרונות שמיעה מתקדמים עם עיצוב אלגנטי ותכונות חכמות',
        alt: 'מכשירי שמיעה פרימיום מוצגים על רקע צבעוני',
      },
      {
        id: 'hearing-test-process',
        image: hearingTestProcess,
        title: 'תהליך בדיקת השמיעה',
        description: 'סביבה מקצועית ונעימה לביצוע בדיקות שמיעה מדויקות',
        alt: 'מטופלת בתהליך בדיקת שמיעה עם ציוד מקצועי',
      },
      {
        id: 'hearing-aid-charging',
        image: hearingAidCharging,
        title: 'טיפול ותחזוקה',
        description: 'שירותי תחזוקה מקצועיים למכשירי שמיעה וציוד נלווה',
        alt: 'מכשיר שמיעה נטען על מטען מתקדם',
      },
    ]}
    autoPlay={true}
    interval={4000}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gray-50 dark:bg-transparent"></div>
    </Fragment>
  </ImageCarousel>

  <!-- Features2 Widget ************** -->
  <Features2
    title="אודותינו"
    subtitle="מכון טון היא מרפאת שמיעה מובילה המחויבת לספק טיפול אודיולוגי מתקדם ואיכותי. הצוות המקצועי שלנו כולל אודיולוגים מוסמכים עם ניסיון רב באבחון וטיפול בבעיות שמיעה. אנו משתמשים בציוד החדיש ביותר כדי להבטיח אבחון מדויק וטיפול יעיל."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="המספרים מדברים בעד עצמם"
    subtitle="אלפי מטופלים מרוצים בחרו במכון טון לטיפול בשמיעה שלהם"
    stats={[
      { title: 'מטופלים מרוצים', amount: '5,000+' },
      { title: 'שנות ניסיון', amount: '15+' },
      { title: 'דירוג מקצועי', amount: '4.9' },
      { title: 'בדיקות שמיעה', amount: '10,000+' },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="מה השירותים שאנו מספקים?"
    subtitle="אנו מציעים מגוון רחב של שירותי אודיולוגיה מקצועיים, לטיפול בבעיות שמיעה, לרבות בדיקות שמיעה."
    items={[
      {
        title: 'בדיקה אודיומטרית',
        description: 'בדיקת שמיעה מדויקת למדידת רמת השמיעה ואיתור ליקויי שמיעה באמצעות ציוד מתקדם.',
        icon: 'flat-color-icons:database',
      },
      {
        title: 'בדיקת טימפנומטריה',
        description: 'בדיקה מתקדמת לבחינת תפקוד עצם התוף ותעלת השמיעה התיכונה.',
        icon: 'flat-color-icons:search',
      },
      {
        title: 'התאמת מכשירי שמיעה לכל הגילאים',
        description: 'התאמה אישית ומקצועית של מכשירי שמיעה מתקדמים לתינוקות, ילדים, מבוגרים וקשישים.',
        icon: 'flat-color-icons:electronics',
      },
      {
        title: 'אוזניות אלחוטיות לטלוויזיה',
        description: 'פתרונות הגברה מתקדמים לצפייה בטלוויזיה עם איכות שמע גבוהה ללא הפרעה לסביבה.',
        icon: 'flat-color-icons:headset',
      },
      {
        title: 'טלפון מוגבר',
        description: 'מכשירי טלפון מותאמים עם הגברת קול לשיפור התקשורת הטלפונית.',
        icon: 'flat-color-icons:phone',
      },
      {
        title: 'סוללות למכשירי שמיעה',
        description: 'מגוון רחב של סוללות איכותיות לכל סוגי מכשירי השמיעה עם חיי סוללה ארוכים.',
        icon: 'flat-color-icons:charge-battery',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="היתרונות שלנו"
    subtitle="למה לבחור במכון טון לטיפול בשמיעה שלכם"
    columns={3}
    items={[
      {
        title: 'צוות מקצועי מוסמך',
        description: 'אודיולוגים מוסמכים עם ניסיון רב באבחון וטיפול בבעיות שמיעה שונות.',
        icon: 'tabler:user-check',
      },
      {
        title: 'ציוד מתקדם',
        description: 'מכשור חדיש ומתקדם לאבחון מדויק וטיפול יעיל בבעיות שמיעה.',
        icon: 'tabler:microscope',
      },
      {
        title: 'טיפול מותאם אישית',
        description: 'כל טיפול מותאם אישית לצרכים הספציפיים של כל מטופל ומטופלת.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'שירות מקצועי ואדיב',
        description: 'שירות אדיב ומקצועי עם דגש על נוחות המטופל וחוויית הטיפול.',
        icon: 'tabler:heart',
      },
      {
        title: 'מעקב וטיפול מתמשך',
        description: 'מעקב מתמשך אחר התקדמות הטיפול והתאמות נדרשות לאורך זמן.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'מיקום נגיש',
        description: 'מיקום מרכזי ונגיש עם חניה חינם ונגישות מלאה לנכים.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="שאלות נפוצות"
    items={[
      {
        title: 'איך אדע אם אני צריך בדיקת שמיעה?',
        description:
          'אם אתה חווה קשיים בשמיעה, צלצולים באוזניים, או קושי בהבנת דיבור בסביבה רועשת, מומלץ לבצע בדיקת שמיעה. גם אם יש לך היסטוריה משפחתית של בעיות שמיעה, בדיקה תקופתית מומלצת.',
      },
      {
        title: 'כמה זמן לוקחת בדיקת שמיעה?',
        description:
          'בדיקת שמיעה מקיפה נמשכת בין 20-30 דקות, תלוי בסוג הבדיקה הנדרשת. הבדיקה כוללת הערכה מקיפה של מערכת השמיעה.',
      },
      {
        title: 'האם בדיקת השמיעה כואבת?',
        description: 'לא, בדיקת השמיעה אינה כואבת כלל. הבדיקה מתבצעת באמצעות אוזניות ואינה פולשנית.',
      },
      {
        title: 'האם מכשירי השמיעה נראים?',
        description:
          'כיום קיימים מכשירי שמיעה זעירים ומודרניים שקשה מאוד להבחין בהם. חלקם אף מוסתרים לחלוטין בתוך תעלת האוזן.',
      },
      {
        title: 'האם יש אחריות על מכשירי השמיעה?',
        description: 'כן, כל מכשירי השמיעה מגיעים עם אחריות מלאה של היצרן. בנוסף, אנו מספקים שירות ותמיכה מתמשכים.',
      },
      {
        title: 'איך אני יכול לקבוע תור?',
        description: 'ניתן לקבוע תור בטלפון, דרך האתר או במייל. אנו נשמח לעזור לכם לקבוע תור בזמן הנוח לכם.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Features3 Widget ************** -->

  <Features3
    title="צרו קשר איתנו"
    subtitle="אנו כאן לעזור ולענות על כל שאלה שיש לכם"
    columns={4}
    items={[
      {
        title: 'טלפון',
        icon: 'tabler:phone',
        callToAction: {
          target: '_blank',
          text: 'התקשר אלינו',
          href: 'tel:0733880680',
          variant: 'link',
        },
      },
      {
        title: 'אימייל',
        icon: 'tabler:mail',
        callToAction: {
          target: '_blank',
          text: 'כתוב לנו',
          href: 'mailto:info.toneclinic@gmail.com',
          variant: 'link',
        },
      },
      {
        title: 'קביעת תור',
        icon: 'tabler:calendar',
        callToAction: {
          target: '_blank',
          text: 'קבע תור',
          href: '/contact',
          variant: 'link',
        },
      },
      {
        title: 'שעות פעילות',
        icon: 'tabler:clock',
        callToAction: {
          target: '_blank',
          text: 'פרטים',
          href: '/contact',
          variant: 'link',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_self',
        text: 'פגישת ייעוץ',
        href: '/contact',
        icon: 'tabler:calendar',
      },
    ]}
  >
    <Fragment slot="title">התחל את המסע לשמיעה טובה יותר</Fragment>

    <Fragment slot="subtitle">
      אל תחכה - שמיעה טובה יותר מתחילה בבדיקה פשוטה. צור קשר איתנו היום וקבל את הטיפול המקצועי שאתה ראוי לו.
    </Fragment>
  </CallToAction>
</Layout>
