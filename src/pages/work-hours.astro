            <!-- Friday -->
            <div class="bg-gray-100 rounded-lg p-4 border border-gray-200">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zM9 7a1 1 0 00-2 0v2H5a1 1 0 000 2h2v2a1 1 0 102 0v-2h2a1 1 0 000-2H9V7z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <span class="font-medium text-gray-600">יום שישי</span>
                </div>
                <span class="font-medium text-gray-500">סגור</span>
              </div>
            </div>

            <!-- Saturday -->
            <div class="bg-gray-100 rounded-lg p-4 border border-gray-200">
              <div class="flex items-center justify-between">
