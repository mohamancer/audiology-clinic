---
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'שעות פעילות',
  description: 'שעות הפעילות של מכון טון - מרפאת שמיעה מקצועית. זמינים עבורכם בימים א-ה בין השעות 10:00-18:00.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    title="שעות פעילות"
  >
  </Hero>

  <!-- Working Hours Table Section -->
  <section class="pb-16 ">
    <div class="max-w-4xl mx-auto px-4">
      <div class=" rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-primary to-secondary text-white p-8 text-center">
          <p class="text-primary-100 text-xl">זמינים עבורכם בימים א-ה</p>
        </div>

        <!-- Table -->
        <div class="p-4 md:p-8">
          <!-- Desktop Table -->
          <div class="hidden md:grid grid-cols-2 gap-0 border border-gray-200 rounded-lg overflow-hidden">
            <!-- Table Header -->
            <div class="bg-gray-50 p-4 font-semibold text-gray-700 border-b border-gray-200">
              <div class="flex items-center justify-center">
                <svg class="w-5 h-5 mr-2 text-primary" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                    clip-rule="evenodd"></path>
                </svg>
                ימים
              </div>
            </div>
            <div class="bg-gray-50 p-4 font-semibold text-gray-700 border-b border-gray-200">
