---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'צור קשר - ToneClinic',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="צור קשר" title="בואו נפגש!" />

  <ContactUs
    id="form"
    title="שלחו לנו הודעה היום!"
    subtitle="למענה מהיר יותר, בדקו את מדור השאלות הנפוצות. ייתכן שתמצאו שם את הפתרון שאתם מחפשים! אם לא, צוות התמיכה שלנו ישמח לעזור לכם."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'שם מלא',
      },
      {
        type: 'email',
        name: 'email',
        label: 'אימייל',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'טלפון',
      },
    ]}
    textarea={{
      label: 'הודעה',
    }}
    disclaimer={{
      label: 'על ידי שליחת טופס יצירת קשר זה, אתם מכירים ומסכימים לאיסוף המידע האישי שלכם.',
    }}
    description="צוות התמיכה שלנו בדרך כלל עונה תוך 24 שעות עסקיות."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="אנחנו כאן לעזור!"
    items={[
      {
        title: 'קביעת תור',
        description: `צרו קשר איתנו לקביעת תור לבדיקת שמיעה, התאמת מכשירי שמיעה או ייעוץ מקצועי. אנו נשמח לעזור לכם לקבוע תור בזמן הנוח לכם.`,
      },
      {
        title: 'ייעוץ מקצועי',
        description:
          'צרו קשר איתנו לשאלות מקצועיות בנושא שמיעה, טיפול בבעיות שמיעה, מניעה או כל שאלה אחרת הקשורה לאודיולוגיה.',
      },
      {
        title: 'תמיכה טכנית',
        description: 'צרו קשר איתנו לבעיות טכניות עם מכשירי השמיעה, התאמות נדרשות או כל בעיה אחרת הקשורה לטיפול.',
      },
      {
        title: 'טלפון',
        description: '050-6712610 | 073-3880680',
        icon: 'tabler:phone',
      },
      {
        title: 'אימייל',
        description: 'info.toneclinic@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'כתובת',
        description: 'הדקלים 18 אזור תעשייה לב הארץ - ראש העין',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
