---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'קביעת תור - מכון טון',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="קביעת תור" title="נשמח לעזור לכם!" />

  <!-- Business Phone Number Prominently Displayed -->
  <div class="bg-primary text-white py-8 text-center">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4">לקביעת תור מידית - חייגו:</h2>
      <a href="tel:0733880680" class="text-5xl font-bold hover:text-accent transition-colors">
        073-3880680
      </a>
      <p class="mt-4 text-xl">זמינים 24/7 לשירותכם</p>
    </div>
  </div>

  <ContactUs
    id="form"
    title="קביעת תור אונליין"
    subtitle="מלאו את הטופס ונחזור אליכם בהקדם. לקביעת תור מידית, חייגו אלינו בטלפון 073-3880680"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'שם מלא',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'טלפון',
      },
      {
        type: 'email',
        name: 'email',
        label: 'אימייל (אופציונלי)',
      },
      {
        type: 'text',
        name: 'preferred_time',
        label: 'זמן מועדף לתור',
      },
    ]}
    textarea={{
      label: 'פרטים נוספים / סוג הטיפול הנדרש',
    }}
    disclaimer={{
      label: 'על ידי שליחת טופס יצירת קשר זה, אתם מכירים ומסכימים לאיסוף המידע האישי שלכם.',
    }}
    description="נחזור אליכם בהקדם לקביעת התור. לתגובה מיידית - חייגו 073-3880680"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="אנחנו כאן לעזור!"
    items={[
      {
        title: 'קביעת תור',
        description: `צרו קשר איתנו לקביעת תור לבדיקת שמיעה, התאמת מכשירי שמיעה או ייעוץ מקצועי. אנו נשמח לעזור לכם לקבוע תור בזמן הנוח לכם.`,
      },
      {
        title: 'ייעוץ מקצועי',
        description:
          'צרו קשר איתנו לשאלות מקצועיות בנושא שמיעה, טיפול בבעיות שמיעה, מניעה או כל שאלה אחרת הקשורה לאודיולוגיה.',
      },
      {
        title: 'תמיכה טכנית',
        description: 'צרו קשר איתנו לבעיות טכניות עם מכשירי השמיעה, התאמות נדרשות או כל בעיה אחרת הקשורה לטיפול.',
      },
      {
        title: 'טלפון',
        description: '050-6712610 | 073-3880680',
        icon: 'tabler:phone',
      },
      {
        title: 'אימייל',
        description: 'info.toneclinic@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'כתובת',
        description: 'הדקלים 18 אזור תעשייה לב הארץ - ראש העין',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
